<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/layout_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_member_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_member_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/img_member_icon"
            android:layout_marginLeft="3dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="IDIDIDIDIDID"
            android:textSize="16sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:textSize="14sp"
            android:text="00:00:00"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_upper">
        <ImageView
            android:id="@+id/img_include_type"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="14dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/img_include_type"
            android:maxLines="2"
            android:text="가나다라마바사아자차카타"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/txt_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffeeaa"
            android:textColor="@android:color/black"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="1"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>